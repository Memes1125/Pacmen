<Window x:Class="Pac_man.MainGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pac_man"
        mc:Ignorable="d"
        Title="Menu" Height="300" Width="300" ResizeMode="NoResize">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="Images/pe2.jpg"/>
        </Canvas.Background>
        <Button Name="game" Content="Играть" Canvas.Left="80" Canvas.Top="51.619" Width="117" Height="20" Click="Click_game">
            <Button.Background>
                <ImageBrush ImageSource="Images/pixil-frame-0.png"/>
            </Button.Background>
        </Button>
        <Button Name="levels" Content="Уровни" Canvas.Left="80" Canvas.Top="125.036" Width="117" Height="20" Click="Click_levels">
            <Button.Background>
                <ImageBrush ImageSource="Images/pixil-frame-0.png"/>
            </Button.Background>
        </Button>
        <Button Name="exit" Content="Выход" Canvas.Left="80" Canvas.Top="196.09" Width="117" Height="20" Click="Click_exit">
            <Button.Background>
                <ImageBrush ImageSource="Images/pixil-frame-0.png"/>
            </Button.Background>
        </Button>
    </Canvas>
</Window>
